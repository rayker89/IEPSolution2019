@model IEP.Web.Models.Auction.AuctionModel
@{
	ViewBag.Title = "New Auction";
}

<h2>NewAuction</h2>



@using (Html.BeginForm(Model.Id > 0 ? "Edit" : "Create", "Auction", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
{
	@Html.AntiForgeryToken()
	<hr />

	@Html.ValidationSummary("", new { @class = "text-danger" })

	<div class="form-group">
		@Html.LabelFor(m => m.Name, new { @class = "col-md-2 control-label" })
		<div class="col-md-5">
			@Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
		</div>
	</div>

	<div class="form-group">
		@Html.LabelFor(m => m.ImagePath, new { @class = "col-md-2 control-label" })
		<div class="col-md-5">
			@Html.TextBoxFor(m => m.ImagePath, new { type = "file" })
		</div>
	</div>

	<div class="form-group">
		@Html.LabelFor(m => m.StartPrice, new { @class = "col-md-2 control-label" })
		<div class="col-md-2">
			@Html.TextBoxFor(m => m.StartPrice, new { @class = "form-control" })
		</div>
		
		<div class="col-md-2">
			@Html.TextBoxFor(m => m.Currency, new { @class = "form-control", @readonly = "readonly" })
		</div>
	</div>

	<div class="form-group">
		@Html.LabelFor(m => m.TokenValue, new { @class = "col-md-2 control-label" })
		<div class="col-md-2">
			@Html.TextBoxFor(m => m.TokenValue, new { @class = "form-control", @readonly = "readonly" })
		</div>
	</div>

	<div class="form-group">
		@Html.LabelFor(m => m.DurationTime, new { @class = "col-md-2 control-label" })
		<div class="col-md-2">
			@Html.TextBoxFor(m => m.DurationTime, new { @class = "form-control" })
		</div>
	</div>

	<div class="form-group">
		<div class="col-md-offset-2 col-md-10">
			<input type="submit" class="btn btn-default" value="Submit" />
		</div>
	</div>

}

