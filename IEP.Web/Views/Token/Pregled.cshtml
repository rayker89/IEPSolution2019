@using IEP.Web.Models.Token

<link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/1.10.19/css/dataTables.bootstrap.min.css" rel="stylesheet" />

@model List<OrderModel>

@{
	var list = Model;
}

@{
	ViewBag.Title = "Pregled";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<p><b>Lista Porudzbina</b></p>

<table id="example" class="table">
	<thead class="thead-dark">
		<tr>
			<th scope="col">Id porudzbine</th>
			<th scope="col">Broj Tokena</th>
			<th scope="col">Cena</th>
			<th scope="col">Status</th>
		</tr>
	</thead>
	<tbody>
		@for (int i = 0; i < list.Count; i++)
		{
			{
		<tr>
			<td>@list.ElementAt(i).Id</td>
			<td>@list.ElementAt(i).TokenNumber</td>
			<td>@list.ElementAt(i).Price</td>
			<td>@list.ElementAt(i).Status</td>
		</tr>
			}
		}
	</tbody>
</table>

<script>
	$(document).ready(function () {
		$('#example').DataTable();
	});

</script>